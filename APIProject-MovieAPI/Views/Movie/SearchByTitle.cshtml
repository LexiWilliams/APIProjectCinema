
@{
    ViewData["Title"] = "SearchByTitle";
}

@model APIProject_MovieAPI.Models.Movie
<h1>Search By Title</h1>

<table class="table-dark" style="border-spacing: 15px 2px; border-collapse: separate; border-color: white;">
    <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th>Rated</th>
        <th>Director</th>
        <th>Genre</th>
        <th>Actors</th>
    </tr>
    <tr>
        <td>@Model.Title</td>
        <td>@Model.Year</td>
        <td>@Model.Rated</td>
        <td>@Model.Director</td>
        <td>@Model.Genre</td>
        <td>@Model.Actors</td>
        <td>@Html.ActionLink("Add to Favorites", "AddFavorite", "Movie", Model)</td>
    </tr>
    
</table>


